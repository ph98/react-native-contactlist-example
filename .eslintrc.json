{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "no-unused-vars": ["warn"],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": 0, 
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": "warn",
        "react/prop-types": ["off"],
        "react-native/no-unused-styles": 2,
        "react/display-name" : 0
    }
}